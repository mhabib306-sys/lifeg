{
  "name": "homebase",
  "version": "4.62.0",
  "description": "Homebase - Life Gamification & Task Management",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "postbuild": "node scripts/validate-build.js",
    "preview": "vite preview",
    "bump": "node scripts/bump-version.js",
    "predeploy": "node scripts/check-version.js",
    "deploy": "vite build && node scripts/validate-build.js && cd dist && rm -rf .git .DS_Store && touch .nojekyll && git init && git checkout -B gh-pages && git add -A && git commit -m Deploy && ORIGIN_URL=$(git -C .. remote get-url origin) && git remote add origin \"$ORIGIN_URL\" && git push -f origin gh-pages && rm -rf .git",
    "test": "vitest run",
    "lint": "eslint src/ && node scripts/check-xss.js",
    "build:cap": "CAPACITOR_BUILD=true vite build",
    "cap:sync": "CAPACITOR_BUILD=true vite build && npx cap sync ios",
    "cap:open": "npx cap open ios",
    "cap:run": "CAPACITOR_BUILD=true vite build && npx cap sync ios && npx cap run ios",
    "cap:dev": "CAPACITOR_BUILD=true vite build && npx cap sync ios && npx cap run ios --livereload --external",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "mcp:homebase": "node mcp/homebase-server.mjs",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhabib306-sys/lifeg.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mhabib306-sys/lifeg/issues"
  },
  "homepage": "https://github.com/mhabib306-sys/lifeg#readme",
  "devDependencies": {
    "@capacitor/cli": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tauri-apps/cli": "^2.10.0",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.57.1",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@capacitor/app": "^8.0.1",
    "@capacitor/browser": "^8.0.1",
    "@capacitor/core": "^8.1.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.1.0",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/local-notifications": "^8.0.1",
    "@capacitor/push-notifications": "^8.0.1",
    "@capacitor/splash-screen": "^8.0.1",
    "@capacitor/status-bar": "^8.0.1",
    "@capgo/capacitor-native-biometric": "^8.3.7",
    "@fontsource/inter": "^5.2.8",
    "chart.js": "^4.5.1",
    "firebase": "^12.9.0",
    "motion": "^12.34.0",
    "twemoji": "^14.0.2"
  }
}
